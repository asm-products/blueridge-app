<VirtualHost *:80>
    ServerName dev.blueridgeapp.com
    DocumentRoot "/var/www/blueridgeapp/app"
    SetEnv APPLICATION_ENV development
    <Directory "/var/www/blueridgeapp/app">
        Options Indexes FollowSymLinks
        Order deny,allow
        Allow from all

        RewriteEngine On
        RewriteCond %{REQUEST_FILENAME} -s [OR]
        RewriteCond %{REQUEST_FILENAME} -l [OR]
        RewriteCond %{REQUEST_FILENAME} -d
        RewriteRule ^.*$ - [NC,L]
        RewriteRule ^api(.*)?$ api.php [NC,L]
        RewriteRule ^.*$ index.html [NC]
    </Directory>

    # local dev error logs
    CustomLog "/var/log/apache2/blueridgeapp/access_log" "combined"
    ErrorLog "/var/log/apache2/blueridgeapp/error_log"
    php_admin_value error_log "/var/log/apache2/blueridgeapp/php_error.log"

</VirtualHost>